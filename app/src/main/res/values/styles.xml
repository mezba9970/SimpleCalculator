<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="function_button">
        <item name="android:textSize">40sp</item>
        <item name="android:minHeight">80sp</item>
        <item name="android:textColor">@color/colorFunctionButtonTxt</item>
        <item name="android:background">@drawable/func_round_button</item>
    </style>

    <style name="Number_button">
        <item name="android:textSize">40sp</item>
        <item name="android:minHeight">80sp</item>
        <item name="android:textColor">@color/colorNumButtonTxt</item>
        <item name="android:background">@drawable/num_round_button</item>
    </style>

    <style name="Equal_button">
        <item name="android:textSize">40sp</item>
        <item name="android:minHeight">80sp</item>
        <item name="android:textColor">@color/colorEqlButtonTxt</item>
        <item name="android:background">@drawable/eqal_round_button</item>
    </style>

</resources>
